{
  "plugins": [
    "@shufo/prettier-plugin-blade",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "tabWidth": 4,
        "printWidth": 120
      }
    }
  ],
  "singleQuote": true,
  "semi": false,
  "bracketSpacing": false,
  "bracketSameLine": true,
  "singleAttributePerLine": false,
  "sortTailwindcssClasses": true
}
